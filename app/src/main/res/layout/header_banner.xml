<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.youth.banner.Banner
        android:id="@+id/hBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </com.youth.banner.Banner>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorTransparent"
        android:translationZ="@dimen/dp0"
        app:cardBackgroundColor="@color/colorTransparent"
        app:cardCornerRadius="@dimen/dp6"
        app:cardElevation="0px"
        app:cardMaxElevation="0px"
        app:cardUseCompatPadding="false">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/homeimage1"
            android:scaleType="fitXY"
            android:layout_marginTop="2dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menuRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"
        android:paddingTop="@dimen/dp10"
        />

    <com.example.admin.ccb.view.UPMarqueeView
        android:id="@+id/upView"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/side_distance"
        android:layout_height="45dp">
    </com.example.admin.ccb.view.UPMarqueeView>


</LinearLayout>
